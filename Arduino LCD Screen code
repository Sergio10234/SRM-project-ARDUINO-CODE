#include <Wire.h> 
#include <LiquidCrystal_I2C.h>
#include <SoftwareSerial.h>
SoftwareSerial SERGIOG(7, 8); // RX, TX
LiquidCrystal_I2C lcd(0x27,20,4);  // set the LCD address to 0x27 for a 16 chars and 2 line display

void setup()
{
  lcd.init();  //initialize the lcd
  lcd.backlight();  //open the backlight 
  lcd.setCursor ( 0, 0 );            // go to the top left corner
  lcd.print("     Hello! "); // write this string on the top row
  lcd.setCursor ( 0, 1 );            // go to the 2nd row
  lcd.print(" www.thunkable.com "); // pad string with spaces for centering

  // Open serial port
  Serial.begin(9600);
  // begin bluetooth serial port communication
  ble.begin(9600);
}

void loop() 
{
  //ble.write("Testing...");
  String data = SERGIOG.readString();
  delay(1000);

  if ( data != "") {
    Serial.println(data);
    lcd.setCursor ( 0, 3 );            // go to the fourth row
    lcd.print(data);

//    int n = data.length();
//    Serial.print(n);
//    int i = 0;
//    char char_array[n + 1]; 
//    strcpy(char_array, data.c_str()); 
//    for (i = 0; i < n; i++) {
//      ble.write(char_array[i]);
//    }
  }
